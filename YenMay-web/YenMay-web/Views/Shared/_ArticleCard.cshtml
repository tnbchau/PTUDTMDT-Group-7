@model YenMay_web.Models.ViewModels.Article.ArticleCardViewModel

<div class="card h-100 blog-post-card border-0 shadow-sm d-flex flex-column bg-white">
    @* --- HÌNH ẢNH (Cố định chiều cao 200px) --- *@
    <div class="card-img-wrapper" style="height: 200px; overflow: hidden;">
        <a asp-controller="Article"
           asp-action="Details"
           asp-route-categorySlug="@Model.CategorySlug"
           asp-route-articleSlug="@Model.Slug" class="d-block h-100">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/img/default-blog.jpg" : Model.ImageUrl)"
                 alt="@Model.Title"
                 class="card-img-top w-100 h-100"
                 style="object-fit: cover; transition: transform 0.3s ease;"
                 onerror="this.onerror=null;this.src='/img/default-blog.jpg';" />
        </a>
    </div>

    <div class="card-body d-flex flex-column p-3">
        @* Meta (Cố định 1 dòng) *@
        <div class="post-meta mb-2 small text-muted text-truncate" style="height: 1.2rem;">
            <span class="meta-item">@Model.CreatedDate.ToString("dd/MM/yyyy")</span>
            <span class="mx-1 separator">||</span>
            <a asp-controller="Article"
               asp-action="Index"
               asp-route-categorySlug="@Model.CategorySlug"
               class="category-link text-decoration-none fw-bold text-primary">
                @Model.CategoryName
            </a>
        </div>

        @* Tiêu đề (Cố định tối đa 2 dòng - 3rem) *@
        <h5 class="card-title mb-2" style="height: 3rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; line-height: 1.5rem;">
            <a asp-controller="Article"
               asp-action="Details"
               asp-route-categorySlug="@Model.CategorySlug"
               asp-route-articleSlug="@Model.Slug"
               class="article-title-link text-decoration-none text-dark fw-bold">
                @Model.Title
            </a>
        </h5>

        @* Mô tả ngắn (Cố định tối đa 3 dòng - 3.6rem) *@
        <p class="card-text text-muted mb-4 small" style="height: 3.6rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; line-height: 1.2rem;">
            @Model.ShortDescription
        </p>

        @* Nút đọc thêm đẩy xuống đáy *@
        <div class="mt-auto">
            <a asp-controller="Article"
               asp-action="Details"
               asp-route-categorySlug="@Model.CategorySlug"
               asp-route-articleSlug="@Model.Slug"
               class="btn btn-outline-brown btn-read-more w-100 fw-bold py-2">
                Đọc thêm
            </a>
        </div>
    </div>
</div>