<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yến Sào Yến Mây</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <style>
        body {
            background-color: #fbf9f8;
        }

        /* --- BUTTON STYLES --- */
        .btn-theme-primary {
            background: linear-gradient(96.55deg, #8F582A 12.14%, #E9BC98 105.25%) !important;
            border: none !important;
            color: white !important;
        }

            .btn-theme-primary:hover {
                background: linear-gradient(96.55deg, #7d4b20 12.14%, #d3a380 105.25%) !important;
                color: white !important;
            }

        .btn-theme-secondary {
            background-color: #613613 !important;
            color: white !important;
            border: none !important;
        }

            .btn-theme-secondary:hover {
                background-color: #4d2a0f !important;
                color: white !important;
            }

        /* --- FOOTER STYLES --- */
        .site-footer a {
            color: #fbf9f8;
            text-decoration: none;
        }

            .site-footer a:hover {
                color: #e9bc98;
            }

        .site-footer h4 {
            color: #e9bc98;
        }

        .footer-column ul {
            padding-left: 0;
            list-style: none;
        }

            .footer-column ul li {
                margin-bottom: 0.5rem;
            }

        .footer-social-bct {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-top: 15px;
        }

            .footer-social-bct img {
                max-height: 45px;
                width: auto;
            }

        /* Responsive Footer */
        @@media (max-width: 768px) {
            .footer-column

        {
            text-align: center;
        }

        .footer-column img[alt*="Logo Footer"] {
            margin-left: auto;
            margin-right: auto;
        }

        .footer-social-bct {
            justify-content: center;
        }

            .footer-social-bct img {
                margin-left: 15px;
            }

        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <partial name="_Header" />

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <partial name="_Footer" />

    @* --- SECURITY TOKEN (Bắt buộc cho Cart.js) --- *@
    <div style="display:none;">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
        {
            @Html.AntiForgeryToken()
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @* Lưu ý: Nếu cart.js là bản hợp nhất, hãy cân nhắc xóa các file cũ (index-page.js, cart-page.js) để tránh xung đột sự kiện *@
    <script src="~/js/site-cart-helpers.js"></script>
    <script src="~/js/site.js"></script>

    <script src="~/js/cart.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>