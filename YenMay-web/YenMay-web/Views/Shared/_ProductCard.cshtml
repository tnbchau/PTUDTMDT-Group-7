@using YenMay_web.Models.ViewModels.Products
@model ProductCardViewModel

@{
    var rating = Model.AverageRating;
    var fullStars = (int)Math.Floor(rating);
    var hasHalfStar = rating - fullStars >= 0.3 && rating - fullStars <= 0.7;
    if (rating - fullStars > 0.7) { fullStars++; }

    var productUrl = !string.IsNullOrEmpty(Model.CategorySlug) && !string.IsNullOrEmpty(Model.Slug)
        ? $"/san-pham/{Model.CategorySlug}/{Model.Slug}"
        : $"/san-pham/{Model.Slug}";

    var imageUrl = !string.IsNullOrEmpty(Model.ThumbnailUrl)
        ? (Model.ThumbnailUrl.StartsWith("http") || Model.ThumbnailUrl.StartsWith("/")
            ? Model.ThumbnailUrl
            : "/" + Model.ThumbnailUrl.TrimStart('/'))
        : "/images/no-image.png";
}

<div class="col">
    <div class="product-card h-100 position-relative border rounded shadow-sm d-flex flex-column bg-white">

        @* --- BADGES --- *@
        @if (Model.IsNew)
        {
            <div class="position-absolute top-0 start-0 mt-2 ms-2 badge-overlay" style="z-index: 5;">
                <span class="badge bg-success px-3 py-2 rounded-pill shadow-sm">
                    <i class="fas fa-bolt me-1"></i>MỚI
                </span>
            </div>
        }
        @if (Model.IsBestSeller)
        {
            <div class="position-absolute top-0 end-0 mt-2 me-2 badge-overlay" style="z-index: 5;">
                <span class="badge bg-warning px-3 py-2 rounded-pill shadow-sm text-dark">
                    <i class="fas fa-fire me-1"></i>HOT
                </span>
            </div>
        }
        @if (!Model.InStock)
        {
            <div class="position-absolute top-50 start-50 translate-middle badge-overlay w-100 text-center" style="z-index: 10;">
                <span class="badge bg-danger px-4 py-3 rounded-pill shadow">
                    <i class="fas fa-times-circle me-1"></i>HẾT HÀNG
                </span>
            </div>
        }

        @* --- HÌNH ẢNH (Cố định chiều cao 260px) --- *@
        <div class="position-relative overflow-hidden group-image" style="height: 260px;">
            <a href="@productUrl" class="d-block h-100">
                <img src="@imageUrl" class="card-img-top transition-transform w-100 h-100" alt="@Model.Name"
                     style="object-fit: cover;"
                     onerror="this.onerror=null;this.src='/images/no-image.png';">
            </a>
            @if (!Model.InStock)
            {
                <div class="position-absolute top-0 start-0 w-100 h-100 bg-white opacity-50"></div>
            }
        </div>

        @* --- NỘI DUNG --- *@
        <div class="card-body d-flex flex-column p-3">

            @* Danh mục (Cố định 1 dòng) *@
            @if (!string.IsNullOrEmpty(Model.CategoryName))
            {
                <div class="product-category small mb-1 text-uppercase text-muted text-truncate" style="height: 1.2rem;">
                    <a href="/san-pham?categorySlug=@Model.CategorySlug" class="text-decoration-none text-secondary" style="font-size: 0.75rem;">
                        @Model.CategoryName
                    </a>
                </div>
            }

            @* Tên sản phẩm (Cố định tối đa 2 dòng - 2.8rem) *@
            <h3 class="product-title h6 mb-2" style="height: 2.8rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; line-height: 1.4rem;">
                <a href="@productUrl" class="text-decoration-none text-dark fw-bold" title="@Model.Name">
                    @Model.Name
                </a>
            </h3>

            @* Đánh giá sao *@
            <div class="product-rating mb-2">
                <div class="star-rating d-inline-block">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= fullStars)
                        {
                            <i class="fas fa-star text-warning"></i>
                        }
                        else if (hasHalfStar && i == fullStars + 1)
                        {

                            <i class="fas fa-star-half-alt text-warning"></i>
                        }
                        else
                        {

                            <i class="far fa-star text-secondary opacity-25"></i>
                        }
                    }
                </div>
                <small class="text-muted ms-1">(@(Model.ReviewCount > 0 ? Model.ReviewCount : 0))</small>
            </div>

            @* Mô tả ngắn (Cố định tối đa 2 dòng - 2.4rem) *@
            <div class="product-excerpt text-muted small mb-3" style="height: 2.4rem; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; line-height: 1.2rem;">
                @Html.Raw(Model.ShortDescription)
            </div>

            @* Giá tiền & Đã bán (Đẩy xuống đáy nhờ mt-auto) *@
            <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="price" style="color: #d26e4b; font-weight: 700; font-size: 1.1rem;">
                        @Model.PriceFormatted
                    </div>
                    @if (Model.SoldCount > 0)
                    {
                        <div class="sold-count small text-muted text-truncate ms-2">
                            Đã bán: @Model.SoldCount
                        </div>
                    }
                </div>

                <button class="btn btn-theme-primary add-to-cart-btn text-white rounded-pill w-100 py-2 shadow-sm"
                        data-id="@Model.Id"
                        data-name="@Model.Name"
                        @(!Model.InStock ? "disabled" : "")>
                    @if (Model.InStock)
                    {
                        <span class="d-flex align-items-center justify-content-center gap-2">
                            <i class="fas fa-cart-plus"></i>
                            <span class="small fw-bold">Thêm vào giỏ</span>
                        </span>
                    }
                    else
                    {
                        <span class="d-flex align-items-center justify-content-center gap-2">
                            <i class="far fa-bell"></i>
                            <span class="small fw-bold">Hết hàng</span>
                        </span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>