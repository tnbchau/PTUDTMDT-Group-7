@using System.Globalization
@model YenMay_web.Models.ViewModels.Cart.CartIndexViewModel

@{
    ViewData["Title"] = "Giỏ Hàng";
    Layout = "_Layout";
    var culture = CultureInfo.GetCultureInfo("vi-VN");
    bool hasItems = Model.Items is not null && Model.Items.Any();
}

<style>
    /* Ẩn nút tăng giảm mặc định của browser */
    .quantity-controls input::-webkit-outer-spin-button,
    .quantity-controls input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .quantity-controls input {
        -moz-appearance: textfield;
    }

    /* Loading overlay khi update ajax */
    #cart-loading-overlay {
        position: fixed; /* Đổi thành fixed để phủ toàn màn hình */
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255,255,255,0.6);
        z-index: 9999;
        display: none;
        justify-content: center;
        align-items: center;
        backdrop-filter: blur(2px);
    }

    .cart-item-row {
        transition: opacity 0.3s ease;
    }
</style>

<main class="site-main section-padding position-relative">

    @* Loading Overlay *@
    <div id="cart-loading-overlay">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <div class="container py-5">
        @* Token bảo mật bắt buộc cho AJAX *@
        @Html.AntiForgeryToken()

        <div class="text-center mb-5">
            <h1 class="fw-bold text-uppercase">Giỏ Hàng Của Bạn</h1>
            <p class="text-muted">Xem lại danh sách sản phẩm trước khi thanh toán</p>
        </div>

        <div class="cart-container">
            @if (hasItems)
            {
                <div class="row">
                    @* === PHẦN 1: BẢNG SẢN PHẨM (Bên trái) === *@
                    <div class="col-lg-8 mb-4">
                        <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
                            <div class="table-responsive">
                                <table class="cart-table table table-hover align-middle mb-0">
                                    <thead class="bg-light text-secondary">
                                        <tr>
                                            <th scope="col" class="py-3 ps-4 border-0">Sản Phẩm</th>
                                            <th scope="col" class="py-3 text-end border-0">Đơn Giá</th>
                                            <th scope="col" class="py-3 text-center border-0" style="width: 140px;">Số Lượng</th>
                                            <th scope="col" class="py-3 text-end border-0">Tạm Tính</th>
                                            <th scope="col" class="py-3 text-center border-0" style="width: 50px;"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="cart-items-body">
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr class="cart-item-row border-bottom-0" id="row-@item.Id">
                                                <td class="ps-4 py-3">
                                                    <div class="d-flex align-items-center">
                                                        <a href="/san-pham/@item.CategorySlug/@item.Slug" class="me-3">
                                                            <img src="@item.ProductImage" alt="@item.ProductName"
                                                                 class="img-fluid rounded border"
                                                                 style="width: 80px; height: 80px; object-fit: cover;">
                                                        </a>
                                                        <div>
                                                            <a href="/san-pham/@item.CategorySlug/@item.Slug" class="text-decoration-none text-dark fw-bold d-block mb-1">
                                                                @item.ProductName
                                                            </a>
                                                            @if (!item.IsAvailable)
                                                            {
                                                                <span class="badge bg-danger">Hết hàng</span>
                                                            }
                                                            else if (item.Stock < 5)
                                                            {
                                                                <small class="text-warning d-block">Chỉ còn @item.Stock sản phẩm</small>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-end fw-bold text-secondary">
                                                    @item.Price.ToString("#,##0", culture)₫
                                                </td>
                                                <td class="text-center">
                                                    <div class="quantity-controls input-group input-group-sm rounded bg-light border">
                                                        <button class="btn btn-link text-dark border-0 px-2 btn-qty-action"
                                                                type="button"
                                                                data-action="decrease"
                                                                style="text-decoration: none;">
                                                            -
                                                        </button>

                                                        <input type="number"
                                                               class="form-control text-center border-0 bg-transparent fw-bold cart-qty-input p-0"
                                                               value="@item.Quantity"
                                                               min="1"
                                                               max="@item.Stock"
                                                               data-id="@item.Id"
                                                               readonly>

                                                        <button class="btn btn-link text-dark border-0 px-2 btn-qty-action"
                                                                type="button"
                                                                data-action="increase"
                                                                @(!item.IsAvailable ? "disabled" : "")
                                                                style="text-decoration: none;">
                                                            +
                                                        </button>
                                                    </div>
                                                </td>
                                                @* QUAN TRỌNG: Thêm ID vào đây để JS update *@
                                                <td class="text-end fw-bold text-primary" id="total-item-@item.Id">
                                                    @item.Total.ToString("#,##0", culture)₫
                                                </td>
                                                <td class="text-center pe-3">
                                                    <button class="btn-remove-item btn btn-sm text-danger p-2"
                                                            data-id="@item.Id"
                                                            title="Xóa sản phẩm">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="card-footer bg-white p-3 d-flex justify-content-between align-items-center">
                                <a href="/san-pham" class="text-decoration-none text-muted">
                                    <i class="fas fa-arrow-left me-1"></i> Tiếp tục mua sắm
                                </a>
                            </div>
                        </div>
                    </div>

                    @* === PHẦN 2: TỔNG TIỀN (Bên phải) === *@
                    <div class="col-lg-4">
                        <div class="card border-0 shadow-sm rounded-3 bg-light">
                            <div class="card-body p-4">
                                <h5 class="fw-bold mb-4">Cộng Giỏ Hàng</h5>

                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Tạm tính:</span>
                                    @* QUAN TRỌNG: Thêm ID *@
                                    <span class="fw-bold" id="cart-subtotal">@Model.SubTotal.ToString("#,##0", culture)₫</span>
                                </div>

                                <div class="d-flex justify-content-between mb-4 border-bottom pb-3">
                                    <span class="text-muted">Phí vận chuyển:</span>
                                    <span class="text-success fw-bold">
                                        @(Model.IsFreeShipping ? "Miễn phí" : "Tính khi thanh toán")
                                    </span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <span class="fw-bold fs-5">Tổng cộng:</span>
                                    @* QUAN TRỌNG: Thêm ID *@
                                    <span class="fw-bold fs-4 text-primary" id="cart-total">@Model.TotalAmount.ToString("#,##0", culture)₫</span>
                                </div>

                                <div class="d-grid">
                                    <a href="/Order/Checkout" class="btn btn-primary py-3 fw-bold text-uppercase rounded shadow-sm">
                                        Tiến hành thanh toán
                                    </a>
                                </div>

                                <div class="mt-3 text-center">
                                    <small class="text-muted"><i class="fas fa-shield-alt me-1"></i> Bảo mật thanh toán 100%</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                @* === TRƯỜNG HỢP GIỎ HÀNG TRỐNG === *@
                <div class="text-center py-5">
                    <div class="mb-4 text-muted opacity-25">
                        <i class="fas fa-shopping-bag fa-6x"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Giỏ hàng của bạn đang trống</h3>
                    <p class="text-muted mb-4">
                        Có vẻ như bạn chưa thêm sản phẩm nào vào giỏ hàng.<br>
                        Hãy khám phá các sản phẩm tuyệt vời của chúng tôi ngay nhé!
                    </p>
                    <a href="/san-pham" class="btn btn-primary px-5 py-3 rounded-pill fw-bold shadow-sm">
                        MUA SẮM NGAY
                    </a>
                </div>
            }
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/js/cart.js"></script>
}