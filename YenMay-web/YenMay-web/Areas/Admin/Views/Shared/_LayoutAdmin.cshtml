<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin YenMay</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

    <style>
        /* --- 1. VARIABLES --- */
        :root {
            --primary-color: #5D4037;
            --primary-dark: #3E2723;
            --bg-light: #f8f9fa;
            --white: #ffffff;
            --sidebar-width: 250px;
            --transition: all 0.3s ease;
            --text-muted: #888;
            --danger: #dc3545;
        }

        /* --- 2. BASE & LAYOUT --- */
        body {
            font-family: 'Noto Sans', 'Segoe UI', sans-serif;
            background-color: var(--bg-light);
            margin: 0;
            overflow-x: hidden;
        }

        #admin-dashboard {
            display: flex;
            min-height: 100vh;
        }

        /* --- 3. SIDEBAR --- */
        .sidebar {
            width: var(--sidebar-width);
            min-width: var(--sidebar-width);
            max-width: var(--sidebar-width);
            background: var(--white);
            border-right: 1px solid #e0e0e0;
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
            transition: var(--transition);
            z-index: 1000;
        }

        .logo-section {
            padding: 30px 20px;
            text-align: center;
            border-bottom: 1px solid #f0f0f0;
        }

            .logo-section .logo {
                max-width: 120px;
                height: auto;
                margin-bottom: 15px;
            }

            .logo-section h2 {
                font-size: 1.2rem;
                font-weight: 700;
                color: var(--primary-dark);
                letter-spacing: 2px;
                margin: 0;
            }

        /* Navigation */
        .sidebar nav {
            flex: 1;
            padding: 20px 0;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar ul li {
                margin: 4px 15px;
            }

                .sidebar ul li a {
                    display: flex;
                    align-items: center;
                    padding: 12px 20px;
                    color: #444;
                    text-decoration: none;
                    border-radius: 10px;
                    font-weight: 500;
                    transition: var(--transition);
                }

                    .sidebar ul li a i {
                        width: 25px;
                        font-size: 1.1rem;
                        color: var(--text-muted);
                        transition: var(--transition);
                    }

                    /* Hover & Active States */
                    .sidebar ul li a:hover {
                        background-color: rgba(93, 64, 55, 0.08);
                        color: var(--primary-color);
                    }

                        .sidebar ul li a:hover i {
                            color: var(--primary-color);
                        }

                    .sidebar ul li a.active {
                        background-color: var(--primary-color) !important;
                        color: var(--white) !important;
                        box-shadow: 0 4px 12px rgba(93, 64, 55, 0.2);
                    }

                        .sidebar ul li a.active i {
                            color: var(--white) !important;
                        }

        /* Logout Button */
        .logout-btn {
            width: calc(100% - 30px);
            margin: 20px 15px;
            padding: 12px;
            background: transparent;
            color: var(--danger);
            border: 1px solid var(--danger);
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .logout-btn:hover {
                background: var(--danger);
                color: var(--white);
            }

        /* --- 4. MAIN CONTENT --- */
        .content {
            flex: 1;
            padding: 30px;
            background-color: var(--bg-light);
            min-width: 0; 
            overflow-x:auto;
        }

        /* --- 5. MOBILE RESPONSIVE --- */
        @@media (max-width: 992px) {
            .sidebar

        {
            position: fixed;
            left: -250px; /* Mặc định ẩn bên trái */
            height: 100vh;
            background: white;
            box-shadow: 5px 0 15px rgba(0,0,0,0.1);
        }

        /* Khi có class .show thì hiện sidebar */
        .sidebar.show {
            left: 0;
        }

        /* Lớp phủ mờ khi mở sidebar trên mobile (tùy chọn) */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 999;
        }

            .sidebar-overlay.show {
                display: block;
            }

        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <div id="admin-dashboard">
        <aside class="sidebar">
            <div class="logo-section">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </a>
                <h2>ADMIN</h2>
            </div>
            <nav>
                @{
                    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
                }
                <ul>
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                           class="@(currentController.Equals("Dashboard", StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="AdminProduct" asp-action="Index"
                           class="@(currentController.Equals("AdminProduct", StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <i class="fas fa-boxes me-2"></i> Sản phẩm
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="AdminOrder" asp-action="Index"
                           class="@(currentController.Equals("AdminOrder", StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <i class="fas fa-shopping-cart me-2"></i> Đơn hàng
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="AdminArticle" asp-action="Index"
                           class="@(currentController.Equals("AdminArticle", StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <i class="fas fa-newspaper me-2"></i> Bài viết
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="AdminShippingRule" asp-action="Index"
                           class="@(currentController.Equals("AdminShippingRule", StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <i class="fas fa-truck me-2"></i> Phí vận chuyển
                        </a>
                    </li>
                </ul>
            </nav>
            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                <button type="submit" class="logout-btn">
                    <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                </button>
            </form>
        </aside>

        <main class="content">
            <button type="button" id="sidebarToggle" class="btn btn-brown d-lg-none mb-3">
                <i class="fas fa-bars"></i>
            </button>

            @RenderBody()
        </main>
    </div>

    @* Scripts *@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>

    <script>
            document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.querySelector('.sidebar');
            const toggleBtn = document.getElementById('sidebarToggle');

            // Tạo overlay nếu chưa có (để bấm ra ngoài thì đóng menu)
            const overlay = document.createElement('div');
            overlay.className = 'sidebar-overlay';
            document.body.appendChild(overlay);

            if (toggleBtn) {
                toggleBtn.addEventListener('click', function () {
                    sidebar.classList.toggle('show');
                    overlay.classList.toggle('show');
                });
            }

            // Bấm vào lớp phủ thì đóng sidebar
            overlay.addEventListener('click', function () {
                sidebar.classList.remove('show');
                overlay.classList.remove('show');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>