@using YenMay_web.Areas.Admin.ViewModels.AdminOrder
@using YenMay_web.Models.ViewModels.Common
@using YenMay_web.Utilities
@model AdminOrderIndexViewModel

@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var mainBrown = "#5D4037";
}

@section Styles {
    <link rel="stylesheet" href="~/css/style-admin.css" />
    <style>
        /* Đồng bộ màu sắc và button */
        .btn-brown {
            background-color: @mainBrown;
            border-color: @mainBrown;
            color: white;
        }

            .btn-brown:hover {
                background-color: #4E342E;
                border-color: #4E342E;
                color: white;
            }

        .btn-outline-brown {
            color: @mainBrown;
            border-color: @mainBrown;
            background-color: transparent;
        }

            .btn-outline-brown:hover {
                background-color: @mainBrown;
                color: white;
            }

        .filter-label {
            font-size: 0.75rem;
            font-weight: 700;
            color: #6c757d;
            text-transform: uppercase;
            margin-bottom: 4px;
        }

        .text-brown-theme {
            color: @mainBrown !important;
        }

        .text-price {
            color: #d32f2f;
            font-weight: 700;
        }

        /* Phân trang đồng bộ */
        .pagination .page-item.active .page-link {
            background-color: @mainBrown !important;
            border-color: @mainBrown !important;
            color: white !important;
        }

        .pagination .page-link {
            color: @mainBrown;
        }

        /* Custom Order Table Styles */
        .order-code {
            font-family: 'Monaco', 'Consolas', monospace;
            font-weight: bold;
            color: @mainBrown;
        }

        .order-code-link {
            text-decoration: none;
            transition: all 0.2s;
            display: inline-block;
        }

            .order-code-link:hover .order-code {
                color: #8D6E63; /* Màu nâu nhạt hơn khi hover */
                text-decoration: underline;
            }

        .table-hover tbody tr:hover {
            background-color: rgba(93, 64, 55, 0.05);
        }
    </style>
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-shopping-cart me-2" style="color: @mainBrown;"></i>Quản lý Đơn hàng
        </h1>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-brown">
                <i class="fas fa-sync me-2"></i>Làm mới
            </a>
        </div>
    </div>

    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-header py-3" style="background-color: @mainBrown;">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-white">
                    <i class="fas fa-filter me-2"></i>Bộ lọc tìm kiếm
                </h6>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.StatusId != null || Model.FromDate != null)
                {
                    <a asp-action="Index" class="btn btn-sm btn-outline-light text-white">
                        <i class="fas fa-undo me-1"></i>Xóa bộ lọc
                    </a>
                }
            </div>
        </div>

        <div class="card-body bg-light">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-5">
                        <label class="filter-label">TÌM KIẾM ĐƠN HÀNG</label>
                        <div class="input-group shadow-sm">
                            <span class="input-group-text bg-white"><i class="fas fa-search text-muted"></i></span>
                            <input type="text" asp-for="SearchTerm" class="form-control" placeholder="Mã đơn hàng (YM-...), SĐT khách hàng..." />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="filter-label">TRẠNG THÁI</label>
                        <select asp-for="StatusId" asp-items="ViewBag.StatusList" class="form-select shadow-sm"></select>
                    </div>

                    <div class="col-md-2">
                        <label class="filter-label">TỪ NGÀY</label>
                        <input type="date" asp-for="FromDate" class="form-control shadow-sm" />
                    </div>

                    <div class="col-md-2">
                        <label class="filter-label d-block">&nbsp;</label>
                        <button type="submit" class="btn btn-brown w-100 shadow-sm d-flex align-items-center justify-content-center" style="height: 38px;">
                            <i class="fas fa-filter me-2"></i> Lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header py-3 bg-white border-bottom">
            <h6 class="m-0 font-weight-bold text-brown-theme">
                <i class="fas fa-clipboard-list me-2"></i>Danh sách đơn hàng
                <span class="badge bg-secondary ms-2 fw-normal">@Model.Pagination.TotalCount đơn hàng</span>
            </h6>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Mã Đơn Hàng</th>
                            <th>Ngày đặt</th>
                            <th>Thông tin đơn</th>
                            <th>Thanh toán</th>
                            <th class="text-center">Trạng thái</th>
                            <th width="120px" class="text-center pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Orders != null && Model.Orders.Any())
                        {
                            @foreach (var item in Model.Orders)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="order-code-link">
                                            <div class="order-code">@item.OrderCode</div>
                                        </a>
                                        <br />
                                        <small class="text-muted">ID: #@item.Id</small>
                                    </td>
                                    <td>
                                        <div class="small">@item.CreatedAtText</div>
                                    </td>
                                    <td>
                                        <div class="small fw-bold text-dark">@item.TotalItems sản phẩm</div>
                                        <div class="text-price">@item.TotalAmountText</div>
                                    </td>
                                    <td>
                                        <div class="small">@item.PaymentMethodText</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge rounded-pill bg-@item.StatusColor" style="font-weight: 500;">
                                            @item.StatusText
                                        </span>
                                    </td>
                                    <td class="text-center pe-4">
                                        <div class="btn-group btn-group-sm border rounded shadow-sm">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link text-brown-theme px-3" title="Chi tiết & Xử lý">
                                                <i class="fas fa-eye me-1"></i> Xem
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="fas fa-receipt fa-3x text-light mb-3"></i>
                                    <p class="text-muted">Không tìm thấy đơn hàng nào phù hợp.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Pagination.TotalPages > 1)
            {
                <nav class="py-4 border-top">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.Pagination.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link shadow-none" href="@Model.Pagination.GetPageUrl(Model.Pagination.PageIndex - 1, Context.Request)"><i class="fas fa-chevron-left"></i></a>
                        </li>
                        @foreach (var p in Model.Pagination.GetPageNumbers())
                        {
                            <li class="page-item @(p == Model.Pagination.PageIndex ? "active" : "")">
                                <a class="page-link shadow-none" href="@Model.Pagination.GetPageUrl(p, Context.Request)">@p</a>
                            </li>
                        }
                        <li class="page-item @(Model.Pagination.HasNextPage ? "" : "disabled")">
                            <a class="page-link shadow-none" href="@Model.Pagination.GetPageUrl(Model.Pagination.PageIndex + 1, Context.Request)"><i class="fas fa-chevron-right"></i></a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>